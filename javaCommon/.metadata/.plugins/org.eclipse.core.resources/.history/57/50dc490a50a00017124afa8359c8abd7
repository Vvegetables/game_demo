package pat;

import java.util.Scanner;

public class P1022 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		int count = sc.nextInt();
		int[] result = new int[count + 1];
		/**
		 * ≥ı ºªØ
		 */
		for(int i = 0; i < count; i++){
			result[i] = 0;
		}
		int resultIndex = 0;
		int maxSum = 0;
		int group = 0,score;
		for(int i = 0; i < count; i++){
			group = sc.nextInt();
			score = sc.nextInt();
			result[group] += score;
			if(result[group] > maxSum){
				maxSum = result[group];
				resultIndex = group;
			}
		}
		System.out.println(resultIndex + " " + maxSum);

	}

}
